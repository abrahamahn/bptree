{
	"name": "typescript-library",
	"version": "0.0.1",
	"description": "boilerplate for typescript libraries",
	"repository": {
		"url": "https://github.com/ccorcos/typescript-library"
	},
	"main": "build/src/index.js",
	"scripts": {
		"typecheck": "tsc --noEmit",
		"build": "tsc",
		"clean": "rm -rf build",
		"test": "NODE_OPTIONS='--loader tsx' mocha './src/**/*.test.ts' './src/**/*.test.tsx' --verbose",
		"release": "npm run clean && npm run build && npm publish"
	},
	"keywords": [],
	"author": "Chet Corcos <ccorcos@gmail.com>",
	"license": "MIT",
	"devDependencies": {
		"@types/mocha": "whitecolor/mocha-types",
		"@types/node": "^18.11.13",
		"mocha": "^10.1.0",
		"tsx": "^3.12.1",
		"typescript": "^4.9.4"
	}
}
